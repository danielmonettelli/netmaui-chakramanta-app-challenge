<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Chakramanta.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Chakramanta"
    Shell.FlyoutBehavior="Disabled">

    <Shell.Resources>
        <Style TargetType="TabBar">
            <Setter Property="Shell.TabBarBackgroundColor" Value="White" />
            <Setter Property="Shell.TabBarTitleColor" Value="#7BED8D" />
            <Setter Property="Shell.TabBarUnselectedColor" Value="#748A9D" />
        </Style>
    </Shell.Resources>

    <TabBar>
        <ShellContent
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="icon_store"
            Route="MainPage" />

        <ShellContent
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="icon_recipes"
            Route="MainPage" />

        <ShellContent
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="icon_quick_shop"
            Route="MainPage" />

        <ShellContent
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="icon_cart"
            Route="MainPage" />

        <ShellContent
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="icon_settings"
            Route="MainPage" />
    </TabBar>

</Shell>
